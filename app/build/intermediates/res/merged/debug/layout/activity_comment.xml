<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.myspringway.secretmemory.activity.CommentActivity">

    <LinearLayout
        android:id="@+id/comment_form"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:weightSum="1.0">

        <EditText
            android:id="@+id/comment_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:hint="@string/comment_edittext"/>

        <com.dd.processbutton.iml.ActionProcessButton
            android:id="@+id/comment_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="@string/comment_btn_upload"
            android:textColor="@color/white"
            custom:pb_colorNormal="@color/blue_normal"
            custom:pb_colorPressed="@color/blue_pressed"
            custom:pb_colorProgress="@color/purple_progress"
            custom:pb_textProgress="@string/comment_btn_loading"
            custom:pb_colorComplete="@color/green_complete"
            custom:pb_textComplete="@string/comment_btn_done"
            custom:pb_colorError="@color/red_error"
            custom:pb_textError="@string/comment_btn_error"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        tools:listitem="@layout/item_comment"
        android:layout_below="@+id/comment_form"/>

</RelativeLayout>
